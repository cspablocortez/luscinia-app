<div id="<%= dom_id record %>">
  <p>
    <img src="<%= record.image_url %>" alt="" style="width: 140px; height: 140px">
  </p>
  
  <p>
    <strong>Title:</strong>
    <%= record.title %>
  </p>

  <p>
    <strong>Artist:</strong>
    <%= record.artist %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= record.release_date %>
  </p>

</div>