<p style="color: green"><%= notice %></p>

<div class="container">
  <%= link_to "Back to records", records_path %>
</div>

<br>

<div class="container">
      <%= render @record %> 

      <div class="btn-group gap-1" role="group">
        <%= button_to edit_record_path(@record), method: :get, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi-pencil"></i> Edit
        <% end %>

        <%= button_to @record, method: :delete, class: "btn btn-outline-danger btn-sm" do %>
          <i class="bi-trash"></i> Delete 
        <% end %>
      </div>
</div>

